- if model.errors.any?
  #error_explanation
    %h2
      = I18n.t("errors.messages.not_saved",                 |
        count: model.errors.count,                       |
        resource: model.class.model_name.human.downcase) |
    %ul
      - model.errors.full_messages.each_with_index do |message, i|
        %li= "#{i+1}.#{message}"