.container-signup
  .container-box
    .one-column
      .login-container
        - if @user.philosopher
          .left-column
            = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
              .signup-form-fields
                .categories
                  %h1.title 会員情報を編集する
                  .signup-with-email
                    .control-group
                      = f.label :nickname, class: "control-label" do
                        %span.text ニックネーム
                        %br
                        (20文字以内)
                      .controls
                        = f.text_field :nickname, autofocus: true, autocomplete: "nickname"
                    -if flash[:notice] && flash[:notice]["nickname"]
                      %span.error ニックネームを入力してください
                    .control-group
                      = f.label :gender, class: "control-label" do
                        %span.text 性別
                      .controls
                        = f.collection_radio_buttons :gender, User.genders_i18n, :first , :second
                    -if flash[:notice] && flash[:notice]["gender"]
                      %span.error 性別を入力してください
                    = f.fields_for :user_profile do |p|
                      .control-group
                        = p.label :profile, class: "control-label" do
                          %span.text プロフィール
                        .controls
                          = p.text_area :profile, rows: 10, style: "width: 330px"
                      .control-group
                        = p.label :affiliation, class: "control-label" do
                          %span.text 所属研究所
                        .controls
                          = p.text_area :affiliation, rows: 10, style: "width: 330px"
                      .control-group
                        = p.label :research, class: "control-label" do
                          %span.text 研究結果
                        .controls
                          = p.text_area :research, rows: 10, style: "width: 330px"
                    %p philosophia一般利用規約 をご確認の上、「同意して登録する」をおしてください
                    .btn-area
                      = f.submit "更新する", class: 'btn'
            = render "users/shared/links"
        - else
          .left-column
            = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
              .signup-form-fields
                .categories
